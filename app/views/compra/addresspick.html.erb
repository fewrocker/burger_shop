<div class="wrapper-checkout">
  <div class="container-checkout">

    <h2 class="selecionarendereco-title">
      Delivery address
    </h2>

    <% if @temendereco %>

      <% @enderecos.each do |endereco| %>

        <div class="addresspick-cadaendereco d-desktop">

          <%= link_to setendereco_path(endereco.id), class:"adresspick-flex-1" do %>
            <h4 class="addresspick-ruanumerocomp">
              <%= endereco.rua %>, <%= endereco.numero %>, <%= endereco.comp %>
            </h4>
            <h4 class="addresspick-estadocidade">
              <%= endereco.cidade %> - <%= endereco.estado %>
            </h4>
          <% end %>

          <%= link_to "Delete address", endereco_path(endereco), :method => :delete, class: "addresspick-excluirendereco", data: { confirm: "Are you sure you want to delete this address?" }, class:"adresspick-flex-2"%>
        </div>

        <div class="addresspick-cadaendereco-mobile d-mobile">

          <%= link_to setendereco_path(endereco.id), class:"adresspick-flex-1" do %>
            <h4 class="addresspick-ruanumerocomp">
              <%= endereco.rua %>, <%= endereco.numero %>, <%= endereco.comp %>
            </h4>
            <h4 class="addresspick-estadocidade">
              <%= endereco.cidade %> - <%= endereco.estado %>
            </h4>
          <% end %>

          <%= link_to "Delete address", endereco_path(endereco), :method => :delete, class: "addresspick-excluirendereco", data: { confirm: "Tem certeza que deseja este endereÃ§o?" }, class:"adresspick-flex-2"%>
        </div>

      <% end %>

      <%= link_to new_endereco_path do %>
        <button class="btn btn-danger">New address</button>
      <% end %>

    <% else %>

      <h4 class="selecionarendereco-noadress-title">
        You have no registered addresses. Please create one.
      </h4>

      <%= link_to new_endereco_path do %>
        <button class="btn btn-danger">New address</button>
      <% end %>

    <% end %>

  </div>
</div>
